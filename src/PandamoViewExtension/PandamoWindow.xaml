<Window x:Class="DynamoPandas.PandamoViewExtension.PandamoWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamoPandas.PandamoViewExtension"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" ResizeMode="NoResize" Width="300" Height="300">
    <Grid Name="MainGrid"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Width="Auto">
            <TextBlock TextWrapping="Wrap" Text="{Binding ProcessOutput}"             
            FontFamily="Consolas" 
            Padding="10" 
            FontWeight="Medium" 
            FontSize="12"
            Background="#2d2d2d"
            Foreground="White"/>
        </ScrollViewer>
    </Grid>
</Window>
